{{#if posts.length}}
<div>
      {{#each posts as |post|}}
      {{!-- {{> post-info post }} --}}
      <div class="card">
            <h2><a href="/post/{{id}}">{{title}}</a>
                  <a href="/dashboard/edit/{{id}}" class="edit-link">Edit Post</a>
            </h2>
            <h3>{{user.username}}<span>{{format_date date_created}}</span></h3>
            <p>{{post_text}}</p>

            <div>
                  <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
            </div>
      </div>
      {{/each}}
</div>
{{/if}}

<div class="new-post-btn form-group">
      <a class="btn btn-primary" href="dashboard/create">Add New Post</a>
</div>

<script src="/js/new-post.js"></script>