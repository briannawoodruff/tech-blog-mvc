<div class="card">
    <h2>{{post.title}}</h2>
    <h3>{{post.user.username}}<span>{{format_date post.date_created}}</span></h4>
        <p>{{post.post_text}}</p>
        {{> comments post.comments}}
        {{#if logged_in}}
<hr>
        <form class="form comment-form">
            <div class="form-group">
                <label for="add-comment">New Comment:</label>
                <input class="form-input" type="text" id="comment-text" name="comment-body" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Add Comment</button>
            </div>
        </form>
        {{/if}}

        {{#if logged_in}}
        <script src="/js/comment.js"></script>
        {{/if}}
</div>